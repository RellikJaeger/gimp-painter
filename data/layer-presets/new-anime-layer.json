{
  "version": 1,
  "name": "New Anime layer",
  "desc": "foobar",

  "source-layer" : {
    "type": "any",           "#": "group, filter, clone, normal, any",
    "alpha": true
  },

  "replacement-layer" : [
    { 
      "target":  "new",
      "name":    "New group",
      "type":    "group",
      "opacity": "source",
      "mode":    "source",
      "child": [
        {
          "target": "new",
          "name":   "mask",
          "type":   "clone",
          "mode":   "svg:dst-in",
          "opacity": 1.0,
          "boudary": "source"
        },
        {
          "target":  "new",
          "name":    "shadow",
          "type":    "normal",
          "mode":    "multiply",
          "boudary": "source"
        },
        {
          "target":  "source",
          "mode":   "normal",
          "opacity": 1.0
        }
      ]
    }
  ]
}
